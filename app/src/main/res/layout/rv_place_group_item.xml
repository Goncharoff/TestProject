<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_place_group_item"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginTop="@dimen/cv_places_top_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/cv_corner_elevation_size"
    card_view:cardElevation="@dimen/cv_corner_elevation_size">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cv_text_name_top_bottom_margin"
            android:layout_marginLeft="@dimen/cv_name_left_margin"
            android:layout_marginStart="@dimen/cv_name_text_margin"
            android:layout_marginTop="@dimen/cv_text_name_top_bottom_margin"
            android:textColor="@color/standartBlackTextColor"
            android:textSize="@dimen/cv_name_size"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>